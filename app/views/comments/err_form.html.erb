<%= simple_form_for([@article, @article.comments.build]) do |form| %>
<div class="field">
  <div class="control">
    <%= form.input :author, input_html: (class: 'input'), wrapper: false, label_html: {class: 'label'} %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= form.input :body, input_html: (class: 'text_area'), wrapper: false, label_html: {class: 'label'} %>
  </div>
</div>
<%=form.button :submit, class: "btn btn-default" %>
<% end %>
