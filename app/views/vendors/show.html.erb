
<p id="notice"><%= notice %></p>

  <div class="container">
  <div class="col-sm-9">
    <div class="panel panel-default">
      <div class="panel-heading">
          <strong>Vendors:</strong>
          <%= @vendor.name %>
      </div>
      <div class="panel-body">
        <div class="col-md-12">
          <div class="pull-left col-md-4 col-xs-12 thumb-image">
              <p><%= image_tag(@vendor.image.url, alt: 'Image', :class =>'center-block img-responsive') if @vendor.image? %></p>
          </div>
        </div>

      <tr class="container-fluid">
              <td><%= link_to 'Edit', edit_vendor_path(@vendor), :class=>'btn btn-default' %></td>
              <td><%= link_to 'Delete', vendor_path(@vendor), :class=>'btn btn-danger  pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div><!-- /panel-body -->
</div><!-- /panel panel-default -->
<!-- /col-sm-5 -->
<td><%= link_to 'Back', supplier_path(@vendor.supplier.id) , :class=>'btn btn-default' %></td>


</div>
</div>
